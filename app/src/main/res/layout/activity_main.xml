<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tsyki.java_conf.gr.jp.androidtutorial.MainActivity">

    <EditText
        android:id="@+id/numberText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/addButton"
        android:layout_marginLeft="-50px"
        android:layout_below="@+id/numberText1"
        android:layout_alignLeft="@+id/numberText2"
        android:layout_alignStart="@+id/numberText2" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addButton"
        android:layout_alignLeft="@+id/addButton"
        android:layout_marginLeft="250px"
        android:id="@+id/minusButton" />

    <Button
        android:text="ร"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addButton"
        android:layout_alignLeft="@+id/minusButton"
        android:layout_marginLeft="250px"
        android:id="@+id/multiplyButton" />

    <Button
        android:text="รท"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addButton"
        android:layout_alignLeft="@+id/multiplyButton"
        android:layout_marginLeft="250px"

        android:id="@+id/divisionButton" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/numberText2"
        android:layout_alignStart="@+id/numberText2"
        android:layout_marginBottom="184dp" />

    <EditText
        android:id="@+id/numberText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/addButton"
        android:layout_alignLeft="@+id/numberText1"
        android:layout_alignStart="@+id/numberText1" />


</RelativeLayout>
